<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/but"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/parchase_gradle"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText4"
        android:layout_width="323dp"
        android:layout_height="47dp"
        android:background="@drawable/text_bg"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="  Item Name"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="140dp" />

    <TextView
        android:id="@+id/HeaP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purchase Item"
        android:textAllCaps="false"
        android:textColor="#F3F2F4"
        android:textColorLink="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06" />

    <EditText
        android:id="@+id/H"
        android:layout_width="322dp"
        android:layout_height="46dp"
        android:background="@drawable/text_bg"
        android:ems="10"
        android:fadeScrollbars="true"
        android:inputType="textPersonName"
        android:text="  Customer Name"
        android:textColor="#FFFFFF"
        android:textColorLink="#FAFFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="208dp" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="322dp"
        android:layout_height="44dp"
        android:background="@drawable/text_bg"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="  Address"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="278dp" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="323dp"
        android:layout_height="49dp"
        android:background="@drawable/text_bg"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="  Quantity"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="341dp" />

    <EditText
        android:id="@+id/editText8"
        android:layout_width="323dp"
        android:layout_height="41dp"
        android:background="@drawable/text_bg"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="  Price"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="414dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="208dp"
        android:layout_height="48dp"
        android:background="@drawable/btn_bg"
        android:text="Add"
        android:textColor="#FFFFFF"
        android:textColorHint="#E6D4D4"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="496dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="311dp"
        android:layout_height="47dp"
        android:background="@drawable/btn_bg"
        android:text="VIEW ALL PURCHASES"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="559dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:text="Clear"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="273dp"
        tools:layout_editor_absoluteY="496dp" />

</androidx.constraintlayout.widget.ConstraintLayout>